{
  "name": "graph",
  "version": "0.1.0",
  "scripts": {
    "lint": "eslint .",
    "docker-up": "docker-compose up -d --force-recreate --renew-anon-volumes graph-node",
    "docker-clean": "docker-compose kill && docker-compose rm -v",
    "prepare-test": "./scripts/run_local.sh",
    "docker-test-up": "docker-compose up -d ganache & npm run docker-up",
    "prepare-rskTestnet": "mustache config/rskTestnet.json subgraph.template.yaml > subgraph.yaml",
    "run-rskTestnet": "./scripts/run_rskTestnet.sh",
    "prepare-rsk": "mustache config/rsk.json subgraph.template.yaml > subgraph.yaml",
    "run-rsk": "./scripts/run_rsk.sh",
    "test": "jest --runInBand",
    "logs": "docker-compose logs -f graph-node",
    "codegen": "graph codegen",
    "build": "graph build",
    "wait-for-healthy": "./scripts/wait-for-healthy.sh",
    "create": "graph create babelfish/graph --node http://127.0.0.1:8020",
    "deploy": "graph deploy babelfish/graph --ipfs http://127.0.0.1:5001 --node http://127.0.0.1:8020",
    "create-local": "graph create babelfish/test-graph --node http://127.0.0.1:8020",
    "deploy-local": "graph deploy babelfish/test-graph --ipfs http://127.0.0.1:5001 --node http://127.0.0.1:8020",
    "remove-local": "graph remove --node http://localhost:8020/ babelfish/test-graph",
    "generate-contracts-types": "typechain --target ethers-v5 --out-dir generated/types './abis/*.json'",
    "postinstall": "yarn generate-contracts-types"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.20.1",
    "@graphprotocol/graph-ts": "^0.20.0",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@typechain/ethers-v5": "^7.0.1",
    "@types/jest": "^26.0.20",
    "@types/mustache": "^4.1.2",
    "@types/node": "^16.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^27.5.1",
    "mustache": "^4.2.0",
    "ts-jest": "^27.0.4",
    "typechain": "^5.1.2"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "babel-polyfill": "^6.26.0",
    "babel-register": "^6.26.0",
    "dayjs": "^1.10.7",
    "ethers": "^5.4.1",
    "hardhat": "^2.0.10",
    "node-logs": "^1.1.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
}
